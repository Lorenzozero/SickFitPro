{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "workouts": {
      ".indexOn": ["userId"],
      "$id": {
        ".read": "data.child('userId').val() === auth.uid",
        ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.child('userId').val() === auth.uid && newData.child('userId').val() === auth.uid)"
      }
    },
